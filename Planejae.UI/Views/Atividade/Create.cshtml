                        </div>
                       
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.FlAdicionaProxResponsavel)
                            @Html.ValidationMessageFor(model => model.FlAdicionaProxResponsavel)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-5">
                            @Html.LabelFor(model => model.FlAceitaAnexo, new { @class = "control-label col-md-10" })
                        </div>
                        
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.FlAceitaAnexo)
                            @Html.ValidationMessageFor(model => model.FlAceitaAnexo)
                        </div>
                    </div>

                    
                    <div class="form-group">
                        <div class="col-md-5">
                           @Html.LabelFor(model => model.Responsaveis, new { @class = "control-label col-md-10" })
                        </div>
                        
                        <div class="col-md-6">
                            @Html.ListBoxFor(x => x.IdsResponsaveis,
                        new MultiSelectList(Model.Responsaveis, "Id_Usuario", "Login_Usuario"))
