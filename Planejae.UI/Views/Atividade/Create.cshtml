@model Planejae.UI.Models.AtividadeModel


<link href="https://fonts.googleapis.com/css?family=Jura" rel="stylesheet">

    <div class="divCreate">
        <div class="body">
            <h2>Criar Atividade</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
