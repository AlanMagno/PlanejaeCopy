                    <h>AtividadeModel</h>
                    <hr class="hrBlue" />
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <div class="col-md-5">
                            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-10" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-md-2" })
                            @Html.ValidationMessageFor(model => model.Nome)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-5">
                            @Html.LabelFor(model => model.DiasTermino, new { @class = "control-label col-md-10" })
                        </div>                        
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.DiasTermino, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DiasTermino)
                        </div>
                    </div>
                    

                    <div class="form-group">
                        <div class="col-md-5">
                            @Html.LabelFor(model => model.FlPermiteRetrabalho, new { @class = "control-label col-md-10" })
                        </div>                        
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.FlPermiteRetrabalho, new { @class = "control-label col-md-10" })
                            @Html.ValidationMessageFor(model => model.FlPermiteRetrabalho)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-5">
